<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_rounded_green"
        android:backgroundTint="@color/green5"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitleApp"
            style="@style/H3Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/app_title"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvTitleDescApp"
            style="@style/H5Regular"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="@string/app_desc"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


    <View
        android:id="@+id/viewDividerActionBar"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/shades1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llHeader" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvIsland"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingEnd="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDividerActionBar"
        tools:ignore="RtlSymmetry"
        tools:itemCount="10"
        tools:listitem="@layout/list_island" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHoya"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvIsland"
        android:visibility="invisible"
        tools:itemCount="4"
        tools:listitem="@layout/list_hoya" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerHoya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvIsland">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/shimmer_layout_card_long" />

            <include layout="@layout/shimmer_layout_card_long" />

            <include layout="@layout/shimmer_layout_card_long" />

            <include layout="@layout/shimmer_layout_card_long" />
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerIsland"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rounded_corner_bg_gray_main"
                android:maxLines="1"
                android:textSize="16sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rounded_corner_bg_gray_main"
                android:maxLines="1"
                android:textSize="16sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rounded_corner_bg_gray_main"
                android:maxLines="1"
                android:textSize="16sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rounded_corner_bg_gray_main"
                android:maxLines="1"
                android:textSize="16sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rounded_corner_bg_gray_main"
                android:maxLines="1"
                android:textSize="16sp" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>